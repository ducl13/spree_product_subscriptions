<div data-hook="admin_product_form_subscribable" class="ml-4">
  <%= f.field_container :subscribable, class: ['form-group'] do %>
    <%= f.check_box :subscribable, class: "subscribable-option subscribable_checkbox form-check-input" %>
    <%= f.label :subscribable, Spree.t(:subscribable), class: "subscribable_label form-check-label" %>
    <%= f.error_message_on :subscribable %>
  <% end %>
</div>

<div id="subscribable_options" class=<%= @product.subscribable? ? 'mb-3' : 'hidden mb-3' %>>
  <%= f.collection_select :subscription_frequency_ids, Spree::SubscriptionFrequency.all, :id, :title, { include_hidden: false } , {class: "custom-select"} do |builder| %>
    <%= builder.label { builder.check_box(class: "subscribable-option") + builder.text } %>
  <% end %>
</div>
